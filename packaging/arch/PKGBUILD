# Maintainer: Micha≈Ç Walenciak <kicer86@gmail.com>
pkgname=photobroom
pkgver=0.98.3
pkgrel=1
pkgdesc="Photos managing tool"
arch=('i686' 'x86_64')
url="https://github.com/Kicer86/photobroom"
license=('GPL3')
groups=()
depends=('qt5-base' 'exiv2')
makedepends=('cmake' 'libkexiv2' 'boost' 'openlibrary' 'qt5-tools')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(https://codeload.github.com/Kicer86/$pkgname/tar.gz/$pkgver)
noextract=()
md5sums=('e53e6ff7c974011778f6735526719d56')

build() 
{
    cd "$pkgname-$pkgver"
    mkdir -p build
    cd build
    cmake .. -DCMAKE_INSTALL_PREFIX=/usr
    make
}

package() 
{
    cd "$pkgname-$pkgver"
    cd build
    make DESTDIR="$pkgdir/" install
} 
